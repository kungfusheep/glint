{
  "name": "@glint/decoder",
  "version": "0.1.0",
  "description": "Zero-dependency TypeScript decoder for Glint binary format",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node dist/test/decoder.test.js",
    "test:all": "npm run build && node dist/test/decoder.test.js && node dist/test/go-ported.test.js && node dist/test/real-data.test.js",
    "bench": "npm run build && node --expose-gc dist/test/go-style-benchmark.js",
    "bench:simple": "npm run build && node --expose-gc dist/test/simple-benchmark.js",
    "bench:go-style": "npm run build && node --expose-gc dist/test/benchmark-improved.js",
    "bench:old": "npm run build && node --expose-gc dist/test/benchmark.js",
    "profile": "npm run build && node --prof --expose-gc dist/test/profile-benchmark.js",
    "profile:generate": "npm run build && node dist/test/profile-benchmark.js --generate",
    "bench:large": "npm run build && node --expose-gc dist/test/large-data-benchmark.js",
    "debug": "npm run build && node --expose-gc dist/test/debug-profile.js",
    "debug:varint": "npm run build && node dist/test/debug-varint.js",
    "debug:schema": "npm run build && node dist/test/debug-schema-parse.js",
    "profile:perf": "npm run build && node dist/test/performance-profile.js",
    "bench:micro": "npm run build && node dist/test/micro-benchmark.js",
    "bench:reader": "npm run build && node dist/test/reader-comparison.js",
    "bench:decoder": "npm run build && node --expose-gc dist/test/decoder-comparison.js",
    "example": "npm run build && node dist/examples/basic.js"
  },
  "keywords": ["glint", "binary", "serialization", "decoder"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^18.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}